require 'json'

JSON.parse(File.read('metadata.json'))['dependencies'].each do |dep|
  repo_name = dep['name'].sub('/', '/puppet-')
  module_name = repo_name.split('/').last
  version = dep['version_requirement'].sub(/\.x/, '')

  item do
    name "puppet-brewcask::#{module_name}"

    expected do
      github_tag
      repo repo_name
      regex /^v(\d+\.\d+).\d+$/
    end

    actual do
      static
      set version
    end
  end
end

item do
  name 'puppet-brewcask::gems'

  expected do
    static
    set 'green'
  end

  actual do
    gemnasium
    slug 'halyard/puppet-brewcask'
  end
end
